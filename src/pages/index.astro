---
import Layout from "@layouts/Layout.astro";

const today = new Date().toLocaleDateString("en-US", {
  month: "long",
  day: "numeric",
  year: "numeric",
});
---

<Layout title="Quicktrackr">
  <h1 class="font-medium text-2xl md:text-4xl text-slate-700">Overview</h1>
  <div class="font-medium mt-3">
    Welcome back! Today is
    <span class="bg-blue-100 py-1 px-2 rounded-xl">{today}</span>
  </div>
</Layout>
