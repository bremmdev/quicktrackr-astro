---
import { Image } from "astro:assets";
import Logo from "@assets/images/logo.svg";
import OverviewIcon from "@assets/icons/overview.svg";
import ExpensesIcon from "@assets/icons/expenses.svg";
import BudgetsIcon from "@assets/icons/budgets.svg";
import CategoriesIcon from "@assets/icons/categories.svg";
import InsightsIcon from "@assets/icons/insights.svg";
---

<style>
  a.active-link {
    @apply rounded-xl bg-opacity-50 bg-blue-300 hover:bg-opacity-50 transition-all;
  }
</style>

<div
  class="bg-gradient-to-b from-indigo-800 to-blue-600 w-14 md:w-56 py-8 md:py-12 shrink-0"
>
  <Image
    src={Logo}
    class="w-[60%] max-w-[5rem] mx-auto"
    loading="eager"
    width={80}
    height={80}
    alt="quicktrackr logo"
  />
  <span class="hidden md:block text-white font-bold text-2xl text-center my-2">
    quick<span class="text-blue-200">trackr</span>
  </span>
  <nav
    id="primary-nav"
    class="text-white flex flex-col items-center font-bold my-6 md:my-8"
  >
    <ul class="space-y-2">
      <li>
        <a
          href="/"
          class="flex gap-4 items-center py-2 px-4 hover:rounded-xl hover:bg-opacity-20 hover:bg-blue-300 active-link"
          ><Image
            src={OverviewIcon}
            alt="overview icon"
            class="flex gap-4 w-5 h-5"
          /><span class="hidden md:block">Overview</span>
        </a>
        <li>
          <a
            href="/expenses"
            class="flex gap-4 items-center py-2 px-4 hover:rounded-xl hover:bg-opacity-20 hover:bg-blue-300"
            ><Image
              src={ExpensesIcon}
              alt="expenses icon"
              class="flex gap-4 w-5 h-5"
            /><span class="hidden md:block">Expenses</span>
          </a>
          <li>
            <a
              href="/budgets"
              class="flex gap-4 items-center py-2 px-4 hover:rounded-xl hover:bg-opacity-20 hover:bg-blue-300"
              ><Image
                src={BudgetsIcon}
                alt="budgets icon"
                class="flex gap-4 w-5 h-5"
              /><span class="hidden md:block">Budgets</span>
            </a>
            <li>
              <a
                href="/categories"
                class="flex gap-4 items-center py-2 px-4 hover:rounded-xl hover:bg-opacity-20 hover:bg-blue-300"
                ><Image
                  src={CategoriesIcon}
                  alt="categories icon"
                  class="flex gap-4 w-5 h-5"
                /><span class="hidden md:block">Categories</span>
              </a>
              <li>
                <a
                  href="/insights"
                  class="flex gap-4 items-center py-2 px-4 hover:rounded-xl hover:bg-opacity-20 hover:bg-blue-300"
                  ><Image
                    src={InsightsIcon}
                    alt="insights icon"
                    class="flex gap-4 w-5 h-5"
                  /><span class="hidden md:block">Insights</span>
                </a>
              </li>
            </li>
          </li>
        </li>
      </li>
    </ul>
  </nav>
</div>
